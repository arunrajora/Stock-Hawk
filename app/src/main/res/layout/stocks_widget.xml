<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/appwidget_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:padding="@dimen/widget_margin"
				android:orientation="vertical">
	<TextView android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:padding="10dp"
	          android:contentDescription="@string/app_name"
	          android:text="@string/app_name"
	          android:background="#06F"
	          android:id="@+id/heading_widget"
	          android:gravity="center"
	          android:textSize="50sp"/>
	<ListView
		android:id="@+id/widget_linear"
		android:layout_width="match_parent"
		android:background="#09D"
		android:layout_height="match_parent">
			</ListView>
	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	          android:contentDescription="@string/empty_widget_list"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:padding="10dp"
	          android:visibility="gone"
	          android:text="@string/empty_widget_list"
	          android:background="#09D"
	          android:id="@+id/ListViewEmpty"
	          android:gravity="center"
	          android:textSize="30sp"/>
</LinearLayout>